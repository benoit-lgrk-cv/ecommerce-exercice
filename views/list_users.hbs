<section class="container mb-5">
  <div class="pb-2 mt-4 mb-2 border-bottom text-center">
    <h2>Liste des utilisateurs</h2>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>ID <i class="bi bi-arrow-down-up"></i></th>
            <th>Nom <i class="bi bi-arrow-down-up"></i></th>
            <th>Pr√©nom <i class="bi bi-arrow-down-up"></i></th>
            <th>Email <i class="bi bi-arrow-down-up"></i></th>
            <th>role <i class="bi bi-arrow-down-up"></i></th>
            <th>Date de modification <i class="bi bi-arrow-down-up"></i></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
            <tr>
              <td>{{dataValues.id}}</td>
              <td>{{dataValues.lastName}}</td>
              <td>{{dataValues.firstName}}</td>
              <td>{{dataValues.email}}</td>
             <td> {{#each dataValues.roles}}{{dataValues.name}}{{/each}}</td>
              <td>{{dataValues.updatedAt}}</td>
              <td class="text-center">
                <a href="/user-update/{{dataValues.id}}">
                  <i class="bi bi-pencil-fill"></i>
                </a>

                <form method="POST" action="/user-delete/{{dataValues.id}}">

                  <button
                    onclick="return confirm('Confirmer la suppression ?')"
                    type="submit"
                  ><i class="bi bi-trash-fill"></i>
                  </button>
                </form>
              </td>
            </tr>

          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>